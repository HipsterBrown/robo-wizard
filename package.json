{
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build -i src/index.ts --name RoboWizard --format cjs,esm,umd",
    "build:docs": "typedoc --out _site src/index.ts",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "robo-wizard",
  "author": "HipsterBrown",
  "module": "dist/robo-wizard.esm.js",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^25.1.4",
    "husky": "^4.2.3",
    "semantic-release": "^19.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^1.11.1",
    "typedoc": "^0.22.15",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@xstate/fsm": "^1.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HipsterBrown/robo-wizard.git"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/github",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "pnpm": {
    "overrides": {
      "node-notifier@<8.0.1": ">=8.0.1",
      "marked@<4.0.10": ">=4.0.10"
    }
  }
}
