{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ]
    }
  }
}
